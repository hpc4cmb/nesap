
# Adjust these as needed
CXX = icpc
CXXFLAGS = -std=c++11 -O3 -xcore-avx2 -g -fPIC -qopenmp
LDFLAGS =
LINK = -qopenmp -lm

OBJS = toast_pointing.o pointing_openmp.o utils.o
HEADERS = utils.hpp pointing_openmp.hpp


all : toast_pointing

toast_pointing : $(OBJS)
	$(CXX) $(LDFLAGS) -o $@ $(OBJS) $(LINK)

%.o : %.cpp $(HEADERS)
	$(CXX) $(CXXFLAGS) -I. -o $@ -c $<

clean :
	rm -f toast_pointing *.o
