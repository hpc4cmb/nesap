
# Normal C++ compilation
CXX = g++
CXXFLAGS = -O3 -march=native -g -std=c++11 -I$(FFTW_INC)

# Flags to enable OpenMP on compile and link
OMPFLAGS = -DUSE_OPENMP -fopenmp

# Linking flags for non-CUDA C++ executables
LINK = -L$(FFTW_DIR) -lfftw3_omp -lfftw3 -lm

# MPI C++ compiler
MPICXX = mpicxx

# CUDA compilation
NVCC = nvcc
NVFLAGS = -std=c++11 -arch=compute_70 -lineinfo -DHAVE_NVTX=1

# Linking flags for CUDA executables
NVLINK = -L$(CUDA_ROOT)/lib64 -lcufft -lcudart -lm -lnvToolsExt
